{% extends 'base.html.twig' %}

{% block body %}
    <h3 class="text-muted mt-4">Pl√°ticas</h3>
    {% for ponente in ponentes %}
        <div class="card my-4 text-muted">
            <div class="card-body">
                <p class="card-text lead"><a href="{{ path('registro_show', {'slug' : ponente.slug }) }}">{{ ponente.nombre }} {{ ponente.apaterno}} {{ ponente.amaterno}}</a> <small>{{ ponente.universidad }}</small></p>
                <h4>{{ ponente.titulo }}</h4>
                <p class="card-text">{{ ponente.abstract|raw }}</p>
            </div>
        </div>

    {% endfor %}

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/x-mathjax-config">
        MathJax.Hub.Config({
            tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}
        });
    </script>
    <script type="text/javascript" async
            src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.1/MathJax.js?config=TeX-MML-AM_CHTML">
    </script>

{% endblock %}